{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Validate: Config",
            "command": "${config:python.defaultInterpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/tools"
            },
            "args": [
                "validate_config.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Validate: Stringtables",
            "command": "${config:python.defaultInterpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/tools"
            },
            "args": [
                "validate_stringtable.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Check: HEMTT",
            "command": "hemtt.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "check",
                "-v"
            ],
            "problemMatcher": []
        },
        {
            "label": "Test All",
            "dependsOn": [
                "Validate: Config",
                "Validate: Stringtables",
                "Check: HEMTT"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ],
    "inputs": [
        {
            "id": "addon",
            "description": "Addon Name:",
            "default": "common",
            "type": "promptString"
        }
    ]
}
